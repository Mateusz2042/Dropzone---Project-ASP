@model string[]

@{
    ViewBag.Title = "FileList";
}

<h3>Lista plików</h3>

<h4>Proszę wybrać rozszerzenie/a pliku/ów i nacisnąć przycisk:</h4>
<br/>

@using (Ajax.BeginForm("ShowUploadedFilesByExtensions", "Home", null, new AjaxOptions
{
    OnSuccess = "success",
    HttpMethod = "Post",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "fileList"
}))
{
